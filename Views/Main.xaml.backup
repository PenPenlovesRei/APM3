           FontWeight="Bold">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="Black" ShadowDepth="1" Direction="180" BlurRadius="0" Opacity="1"/>
                                    </TextBlock.Effect>
                                </TextBlock>

